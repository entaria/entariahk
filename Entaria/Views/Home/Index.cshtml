@{
    ViewBag.Title = "Home";
}

<div data-framework="angularjs">


@Styles.Render("~/Content/entaria/css")
@Scripts.Render("~/bundles/entaria")


<!-- GOOGLE MAPS (interactive) --->
<meta name="viewport" content="initial-scale=1.0, user-scalable=yes" />
<style type="text/css">
            html { height: 50% }
            body { height: 50%; margin: 0; padding: 0 }
            #map-canvas { height: 100% }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.10.3/TweenMax.min.js"></script>
<script type="text/javascript"
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBXMEss-vsF1qa8m75hh2pF1dMuu77Q1tk&sensor=false">
</script>
