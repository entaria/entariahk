<h2>Home</h2>

      <div class="container">
      
	  <br />

      
      <!-------------------------------------------------------------------->
	  <!---  Home Page  ---------------------------------------------------->
	  <!-------------------------------------------------------------------->


	  <!-- Jumbotron -->
      <div class="jumbotron" >
		<div class="container-slider" ng-app="website" ng-controller="SliderController">
			<img class="img-responsive" ng-repeat="slide in slides" class="slide slide-animation"
				ng-hide="!isCurrentSlideIndex($index)" ng-src="{{slide.image}}">
				
			<div class="arrows-left">
				<a href="#" ng-click="prev()" ><img src="~/Images/left-arrow.png"/></a> 
			</div>
			<div class="arrows-right">
				<a href="#" ng-click="next()"><img src="~/Images/right-arrow.png"/></a>
			</div>
			
			<div class="slider-info">
                    <p ng-class="{'active':!isCurrentSlideIndex($index)}" class="slide slide-animation" ng-repeat="slide in slides"
                      ng-click="setCurrentSlideIndex($index);" ng-hide="!isCurrentSlideIndex($index)">{{slide.title}}</p>
					  
                    <p ng-class="{'active':!isCurrentSlideIndex($index)}" class="slide slide-animation" ng-repeat="slide in slides"
                      ng-click="setCurrentSlideIndex($index);" ng-hide="!isCurrentSlideIndex($index)">{{slide.description}}</p>
			</div>			
		</div>
      </div>  
	  
      <br />

      <div class="row section">

        <div class="col-lg-4">
            <h2 class="section-title">Coffee Buzz</h2>
            <a class="twitter-timeline" href="https://twitter.com/search?q=%23coffee" data-widget-id="457884442518749185"></a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </div>
        <div class="col-lg-8">
            <h2 class="section-title">Good Places for Coffee around Town</h2>
            <div id="geo-location-holder">location</div>
            <div id="map-canvas" style="width:650px; height:500px"/></div>
        </div>
              
     </div>

  </div>
      
</div>

